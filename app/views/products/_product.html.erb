<tr>
  <% product.attributes.each do |attr_name, attr_value| %>
    <% next if text_aux?(attr_name) %>
    <td>
      <%= attr_value %>
    </td>
  <% end %>
  <td>
    <% lock_table ||= false %>
    <% unless lock_table %>
      <%= button_to "Add to Cart", add_to_cart_path(:product_id => product.id) %>
    <% end %>
  </td>
</tr>