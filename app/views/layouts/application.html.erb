<!DOCTYPE html>
<html>
<head>
  <title>WebStore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% flash.each do |flash, msg| %>
    <%= msg %>
  <% end %>

<%= yield %>

<% if signed_in? %>

<%= link_to "Sign Out", session_path, method: :delete %>

<% else %>

  <%= link_to "Sign In", new_session_path %>

<% end %>

</body>
</html>
